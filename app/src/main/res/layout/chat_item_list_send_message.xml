<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundDark">

    <ImageView
        android:id="@+id/send_background_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rectangle_call"
        app:layout_constraintBottom_toBottomOf="@+id/send_text_textView"
        app:layout_constraintLeft_toLeftOf="@+id/send_text_textView"
        app:layout_constraintRight_toRightOf="@+id/send_text_textView"
        app:layout_constraintTop_toTopOf="@+id/send_text_textView" />

    <TextView
        android:id="@+id/send_text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/send_text_textView"
        app:layout_constraintRight_toRightOf="@+id/send_background_imageView">

        <TextView
            android:id="@+id/won_text"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@color/colorPrimary"
            android:rotation="45" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>